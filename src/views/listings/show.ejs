<% layout('layout') -%>

<div class="container show-page-container">
  <div class="show-header">
    <h3><i class="fa-solid fa-map-marker-alt"></i> <%= listing.title %></h3>
    <div class="show-actions-top">
      <a href="#"><i class="fa-solid fa-share-from-square"></i> Share</a>
      <a href="#"><i class="fa-regular fa-heart"></i> Save</a>
    </div>
  </div>

  <div class="photo-grid">
    <div class="photo-grid-item photo-grid-item-1">
      <img src="<%= listing.image.url %>" alt="<%= listing.title %>" />
    </div>
    <div class="photo-grid-item">
      <img
        src="https://plus.unsplash.com/premium_photo-1676823553207-758c7a66e9bb?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8cm9vbXxlbnwwfHwwfHx8MA%3D%3D"
        alt="photo"
      />
    </div>
    <div class="photo-grid-item">
      <img
        src="https://images.unsplash.com/photo-1596436889106-be35e843f974?q=80&w=2070&auto=format&fit=crop"
        alt="photo"
      />
    </div>
    <div class="photo-grid-item">
      <img
        src="https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?q=80&w=2070&auto=format&fit=crop"
        alt="photo"
      />
    </div>
    <div class="photo-grid-item">
      <img
        src="https://images.unsplash.com/photo-1560448204-e02f11c3d0e2?q=80&w=2070&auto=format&fit=crop"
        alt="photo"
      /><button class="show-all-photos-btn">
        <i class="fa-solid fa-table-cells"></i> Show all photos
      </button>
    </div>
  </div>

  <div class="listing-info">
    <div class="listing-details-main">
      <h4>
        Entire apartment in <%= listing.location %>, <%= listing.country %>
      </h4>
      <p class="meta-info">2 guests · 1 bedroom · 1 bed · 1 bathroom</p>
      <hr />
      <p>
        <b>Owned by: <i><%= listing.owner.username %></i></b>
      </p>
      <p><%= listing.description %></p>
      <hr />
      <% if(currentUser && listing.owner &&
      currentUser._id.equals(listing.owner._id)) { %>
      <div class="show-actions">
        <a href="/listings/<%= listing._id %>/edit" class="btn-edit">Edit</a>
        <form
          method="POST"
          action="/listings/<%= listing._id %>?_method=DELETE"
        >
          <button class="btn">Delete</button>
        </form>
      </div>
      <% } %>
      <div class="amenities-section">
        <h4>What this place offers</h4>
        <ul class="amenities-grid">
          <li><i class="fa-solid fa-utensils"></i> Kitchen</li>
          <li><i class="fa-solid fa-wifi"></i> Wifi</li>
          <li><i class="fa-solid fa-tv"></i> TV</li>
          <li><i class="fa-solid fa-wind"></i> Hair dryer</li>
        </ul>
        <button class="btn show-all-amenities-btn">
          Show all 24 amenities
        </button>
      </div>
    </div>
    <div class="listing-details-aside">
      <div class="booking-card">
        <div class="booking-price">
          <span
            ><b>₹<%= listing.price.toLocaleString("en-IN") %></b> for 2
            nights</span
          >
        </div>
        <hr />
        <div class="booking-inputs">
          <div class="date-inputs">
            <div>
              <label for="check-in">CHECK-IN</label><span>1/30/2026</span>
            </div>
            <div>
              <label for="check-out">CHECKOUT</label><span>2/1/2026</span>
            </div>
          </div>
          <div class="guest-input">
            <div><label for="guests">GUESTS</label><span>1 guest</span></div>
            <i class="fa-solid fa-chevron-down"></i>
          </div>
        </div>
        <button class="btn reserve-btn">Reserve</button>
        <p class="charge-info">You won't be charged yet</p>
      </div>
    </div>
  </div>
  <hr />
  <div class="rating-breakdown">
    <div class="rating-item">
      <span>Cleanliness</span>
      <div class="rating-bar">
        <div class="rating-fill" style="width: 96%"></div>
      </div>
      <span>4.8</span>
    </div>
    <div class="rating-item">
      <span>Accuracy</span>
      <div class="rating-bar">
        <div class="rating-fill" style="width: 98%"></div>
      </div>
      <span>4.9</span>
    </div>
    <div class="rating-item">
      <span>Check-in</span>
      <div class="rating-bar">
        <div class="rating-fill" style="width: 98%"></div>
      </div>
      <span>4.9</span>
    </div>
    <div class="rating-item">
      <span>Communication</span>
      <div class="rating-bar">
        <div class="rating-fill" style="width: 96%"></div>
      </div>
      <span>4.8</span>
    </div>
    <div class="rating-item">
      <span>Location</span>
      <div class="rating-bar">
        <div class="rating-fill" style="width: 94%"></div>
      </div>
      <span>4.7</span>
    </div>
    <div class="rating-item">
      <span>Value</span>
      <div class="rating-bar">
        <div class="rating-fill" style="width: 94%"></div>
      </div>
      <span>4.7</span>
    </div>
  </div>

  <hr />

  <% if(currentUser) { %>
  <div class="col-8 offset-2">
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      class="needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="3"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
      </div>
      <button class="btn btn-dark">Submit</button>
    </form>
  </div>
  <% } %>
  <hr />

  <div class="reviews-section">
    <% if(listing.reviews.length > 0) { %>
      <h3>Reviews :</h3>
    <div class="review-cards-grid">
      <% for(let review of listing.reviews) { %>
      <div class="review-card">
        <div class="review-author">
          <img
            src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?q=80&w=1780&auto=format&fit=crop"
            alt="avatar"
            class="author-avatar"
          />
          <div class="author-info">
            <b>@<%= review.author.username %></b>
            <p
              class="starability-result card-text"
              data-rating="<%= review.rating %>"
            ></p>
          </div>
        </div>
        <p class="review-text"><%= review.comment %></p>

        <% if(currentUser && review.author.equals(currentUser._id)) { %>

        <div class="btn-container">
          <a
            href="/listings/<%= listing._id %>/reviews/<%= review._id %>/edit"
            class="edit-btn"
            >Edit</a
          >
          <form
            method="POST"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="delt-btn">Delete</button>
          </form>
        </div>

        <% } %>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>

  <div class="map-section">
    <h3>Where you'll be</h3>
    <p><%= listing.location %>, <%= listing.country %></p>
    <div id="map" style="width: 95%; height: 400px"></div>
  </div>
</div>

<script>
  const mapTilerApiKey = "<%= mapTilerApiKey %>";
  const listing = <%- JSON.stringify(listing) %>
</script>

<script src="/js/map.js"></script>
